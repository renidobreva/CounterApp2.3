<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - StatsPro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
</head>
<body>
    <header class="header">
        <div class="container d-flex justify-content-between align-items-center py-3">
            <h1 class="logo">📈 StatsPro</h1>
            <nav>
                <a href="/" class="nav-link">Начало</a>
                <a href="#" class="nav-link">Функции</a>
                <a href="#" class="nav-link">Контакт</a>
            </nav>
        </div>
    </header>

    <main class="container my-5">
        @RenderBody()
    </main>

    <footer class="footer">
        <p>&copy; @DateTime.Now.Year StatsPro | Разработено от <strong>Ренета Добрева</strong></p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
